{{!-- Homepage --}}
{{#> layout  title="Akeneo Help center"}}
<nav class="navbar navbar-default navbar-fixed-top navbar-white">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="index.html">
                <img height="20" src="/img/akeneo.svg"></img>
            </a>
        </div>
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" style="text-transform: uppercase;"><img src="/img/{{selectedLanguage}}-flag.svg" class="flag"/> {{selectedLanguage}}<span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li class="dropdown-title">{{switch_to}}</li>
                    <li><a href="/index.html"><img src="/img/en-flag.svg" class="flag"/> EN</a></li>
                    <li><a href="/fr/index.html"><img src="/img/fr-flag.svg" class="flag"/> FR</a></li>
                    <!-- <li><a href="/de/index.html"><img src="/img/de-flag.svg" class="flag"/> DE</a></li> -->
                </ul>
            </li>
        </ul>
    </div>
</nav>
<div class="container-fluid"> 
    <h1 class="text-center" style="font-family: Comfortaa, sans-serif;"><img src="/img/hello.svg" width="40" style="vertical-align: bottom;"/> {{hi_there}} </h1>
    <h2 class="text-center" style="font-family: Comfortaa, sans-serif;">{{{choose_solutions}}}</h2>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-offset-2 col-lg-4 col-sm-6">
            <div class="solution">
                <a href="pim-index.html">
                    <img class="img-responsive center-block" src="/img/illus-pim.svg"/>
                    <h3 class="text-center">{{pim}}</h3>
                    <p class="text-center"><em>{{best_container}}</em></p>
                </a>
            </div>
        </div>
        <div class="col-lg-4 col-sm-6">
            <div class="solution">
                <a href="onboarder/index.html">
                    <img class="img-responsive center-block" src="/img/illus-onboarder.svg"/>
                    <h3 class="text-center">{{onboarder}}</h3>
                    <p class="text-center"><em>{{onboarder_description}}</em></p>
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        <h2 class="text-center" style="font-family: Comfortaa, sans-serif;">{{or_maybe_tools_help}}</h2>
        <div class="col-lg-offset-4 col-lg-4 col-sm-offset-3 col-sm-6">
            <div class="solution">
                <a href="portal/index.html">
                    <img class="img-responsive center-block" src="/img/illus-portal.svg"/>
                    <h3 class="text-center">{{portal}}</h3>
                    <p class="text-center"><em>{{portal_description}}</em></p>
                </a>
            </div>
        </div>
    </div>
</div>
<div class="jumbotron">
    <div class="container">
        <div class="row">
            <div class="col-xs-offset-3 col-xs-6 col-sm-offset-0 col-sm-4 col-md-offset-1 col-md-3 col-lg-offset-2 col-lg-3">
                <img src="/img/illus-akademy.svg" width="100%"></img>
            </div>
            <div class="hidden-xs col-xs-12 col-sm-8 col-md-7 col-lg-5">
                <h2 class="media-heading">{{need_more_help}}</h2>
                <p>{{need_more_help_descrition}}</p>
                <a class="btn btn-info" href="https://www.akeneo.com/training/?source=akeneo-help">{{get_trained}}</a>
            </div>
            <div class="visible-xs col-xs-12">
                <h2 class="text-center">{{need_more_help}}</h2>
                <p class="text-center">{{need_more_help_descrition}}</p>
                <a href="https://www.akeneo.com/training/?source=akeneo-help"><button class="btn btn-info center-block">{{get_trained}}</button></a>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>{{stay_in_touch_community}}</h2>
            <div class="row">
                <div class="col-xs-6">
                    <div class="panel panel-default panel-btn panel-slack">
                        <a href="https://akeneopim-ug.herokuapp.com">
                            <div class="panel-body">
                                <div class="panel-btn-big">{{slack_user_group}}</div>
                                <p class="text-center">{{slack_user_group_description}}</p>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="panel panel-default panel-btn panel-stack-overflow">
                        <a href="https://stackoverflow.com/questions/tagged/akeneo">
                            <div class="panel-body">
                                <div class="panel-btn-big">Stock overflow</div>
                                <p class="text-center">{{stack_overflow_description}}</p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6">
                    <div class="panel panel-default panel-btn panel-crowdin">
                        <a href="https://crowdin.com/project/akeneo">
                            <div class="panel-body">
                                <div class="panel-btn-big">Crowdin</div>
                                <p class="text-center">{{crowdin_description}}</p>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="panel panel-default panel-btn panel-badger">
                        <a href="http://badger.akeneo.com/login/">
                            <div class="panel-body">
                                <div class="panel-btn-big">Badger</div>
                                <p class="text-center">{{badger_description}}</p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-offset-1 col-md-5">
            <h2>{{stay_in_touch_us}}</h2>
            <div class="row">
                <div class="col-xs-12">
                    <div class="panel panel-default panel-btn">
                        <a href="https://www.akeneo.com/blog/?source=akeneo-help">
                            <div class="panel-body">
                                <div class="panel-btn-big">{{blog}}</div>
                                <p class="text-center">{{blog_deccription}}</p>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="panel panel-default panel-btn">
                        <a href="https://www.akeneo.com/contact/?source=akeneo-help">
                            <div class="panel-body">
                                <div class="panel-btn-big">{{contact_us}}</div>
                                <p class="text-center">{{contact_us_description}}</p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/layout}}
